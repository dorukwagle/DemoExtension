{
    "name": "Demo Extension",
    "version": "1.0.6",
    "description": "Demo Extension by Doruk Wagle",
    "manifest_version": 3,
    "author": "Doruk Wagle",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Demo Extension",
        "default_ifon": "icon.jpg"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage",
        "cookies",
        "alarms"
    ],
    "host_permissions": ["<all_urls>"]
}
