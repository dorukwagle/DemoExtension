{
    "name": "Demo Extension",
    "version": "1.0.5",
    "description": "Demo Extension by Doruk Wagle",
    "manifest_version": 3,
    "author": "Doruk Wagle",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Demo Extension",
        "default_ifon": "icon.jpg"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["activeTab", "tabs", "scripting", "storage", "<all_urls>"]
}
